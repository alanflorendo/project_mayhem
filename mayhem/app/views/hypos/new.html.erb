<h1> Create a new hypo</h1>


<br>
<%= form_for :hypo, url: {action: "create"} do |f| %>

  <p>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :law_name %>
    <%= f.text_field :law_name %>
  </p>

  <p>
    <%= f.label :law_sponsor_date %>
    <%= f.text_field :law_sponsor_date %>
  </p>

  <p>
    <%= f.label :sponsor_name %>
    <%= f.text_field :sponsor_name %>
  </p>

  <p>
    <%= f.label :sponsor_city %>
    <%= f.text_field :sponsor_city %>
  </p>

  <p>
    <%= f.label :sponsor_state %>
    <%= f.text_field :sponsor_state %>
  </p>

  <p>
    <%= f.label :precip_amount %>
    <%= f.text_field :precip_amount %>
  </p>

  <p>
    <%= f.label :is_tornado %>
    <%= f.text_field :is_tornado %>
  </p>

  <p>
    <%= f.label :is_hurricane %>
    <%= f.text_field :is_hurricane %>
  </p>

  <p>
    <%= f.label :is_flood %>
    <%= f.text_field :is_flood %>
  </p>

  <%= f.hidden_field :user_id, :value => current_user.id%>

  <p>
    <%= f.submit value:"Create new hypo" %>
  </p>
  <% end %>

</div>
