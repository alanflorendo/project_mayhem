<h1 id="hypo_title"><%= @hypo.title %> </h1>


<br>

    <% if current_user %>
    <div id="hypo_votes">
      <%= form_for [@hypo, Vote.new] do |f| %>
        <span id="hypo_vote_count"><%= f.label "#{@hypo.vote_count} votes" %></span> <br>
        <br>
        <%= f.submit "Like This Hypo!"%> <br>
        <br>
      <% end %>
    </div>
    <% end %>


  <%= render partial: "detail" %>

  <div id="back_to_hypos_index"><%= link_to "<< Back to Hypos", root_url %></div><br><br><br>

  <h3>Comments</h3>
  <% if current_user %>
    <%= render partial: "comments/new" %>
  <% end %><br><br><br><br>


  <%= render partial: "comments/index", object: @hypo.comments %>

</div>
