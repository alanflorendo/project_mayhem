<%= form_for @user do |f| %>
	<%= f.text_field :email, placeholder: "Enter your email" %> <br>
	<%= f.text_field :username, placeholder: "Enter your username" %> <br>
	<%= f.password_field :password, placeholder: "Password" %> <br>
	<%= f.password_field :password_confirmation, placeholder: "Enter password again" %> <br>
	<%= f.submit value: "Register" %>
<% end %>